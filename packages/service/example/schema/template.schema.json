{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "ChannelTemplateBase",
    "type": "object",
    "oneOf": [
        {
            "$ref": "#/definitions/ChannelTemplateForCan"
        },
        {
            "$ref": "#/definitions/ChannelTemplateForModbus"
        }
    ],
    "definitions": {
        "ModbusPoint": {
            "type": "object",
            "properties": {
                "tag": {
                    "type": "string"
                },
                "offset": {
                    "type": "integer"
                },
                "scale": {
                    "type": "number",
                    "default": 1.0
                },
                "length": {
                    "type": "integer",
                    "default": 1
                },
                "endian": {
                    "type": "string",
                    "enum": [
                        "abcd",
                        "dcba",
                        "badc",
                        "cdab"
                    ],
                    "default": "dcba"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "bool",
                        "int",
                        "uint",
                        "float"
                    ],
                    "default": "uint"
                },
                "access": {
                    "type": "string",
                    "enumValues": [
                        "r",
                        "rw",
                        "w"
                    ],
                    "default": "r"
                }
            },
            "required": [
                "tag",
                "offset"
            ],
            "additionalProperties": false
        },
        "ModbusPoll": {
            "type": "object",
            "properties": {
                "intervalTime": {
                    "type": "integer"
                },
                "function": {
                    "type": "integer"
                },
                "begin": {
                    "type": "integer"
                },
                "length": {
                    "type": "integer"
                },
                "points": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ModbusPoint"
                    }
                }
            },
            "required": [
                "intervalTime",
                "function",
                "begin",
                "length",
                "points"
            ],
            "additionalProperties": false
        },
        "ChannelTemplateForModbus": {
            "type": "object",
            "properties": {
                "adapter": {
                    "const": "modbus"
                },
                "name": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "polls": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ModbusPoll"
                    }
                }
            },
            "required": [
                "name",
                "version",
                "adapter",
                "polls"
            ],
            "additionalProperties": false
        },
        "ChannelTemplateForCan": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "adapter": {
                    "const": "can"
                }
            },
            "required": [
                "name",
                "version",
                "adapter"
            ],
            "additionalProperties": false
        }
    },
    "additionalProperties": true
}
