{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ServiceOption",
    "type": "object",
    "properties": {
        "devices": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/DeviceOption"
            }
        }
    },
    "required": [
        "devices"
    ],
    "additionalProperties": false,
    "definitions": {
        "DeviceOption": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "template": {
                    "type": "string"
                },
                "channel": {
                    "$ref": "#/definitions/ChannelOptionBase"
                },
                "transport_option": {
                    "$ref": "#/definitions/TransportOptionBase"
                },
                "display_name": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "meta": {
                    "type": "object",
                    "properties": {},
                    "additionalProperties": {}
                }
            },
            "required": [
                "name",
                "template",
                "channel",
                "transport_option"
            ],
            "additionalProperties": false
        },
        "TransportOptionBase": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "tcp"
                    ]
                }
            },
            "required": [
                "type"
            ],
            "additionalProperties": true,
            "oneOf": [
                {
                    "$ref": "#/definitions/TransportOptionForTcp"
                }
            ]
        },
        "TransportOptionForTcp": {
            "type": "object",
            "properties": {
                "host": {
                    "type": "string"
                },
                "port": {
                    "type": "integer"
                },
                "type": {
                    "type": "string",
                    "const": "tcp"
                }
            },
            "required": [
                "host",
                "port",
                "type"
            ],
            "additionalProperties": false
        },
        "ChannelOptionBase": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "modbus"
                    ]
                }
            },
            "required": [
                "type"
            ],
            "additionalProperties": true,
            "oneOf": [
                {
                    "$ref": "#/definitions/ChannelOptionForModbus"
                }
            ]
        },
        "ChannelOptionForModbus": {
            "type": "object",
            "properties": {
                "is_rtu": {
                    "type": "boolean"
                },
                "unit_id": {
                    "type": "integer"
                },
                "type": {
                    "type": "string",
                    "const": "modbus"
                }
            },
            "required": [
                "is_rtu",
                "unit_id",
                "type"
            ],
            "additionalProperties": false
        }
    }
}
