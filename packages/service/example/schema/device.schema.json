{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ServiceOption",
    "type": "object",
    "properties": {
        "devices": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/DeviceOption"
            }
        }
    },
    "required": [
        "devices"
    ],
    "definitions": {
        "ChannelOptionForModbus": {
            "type": "object",
            "properties": {
                "isRtu": {
                    "type": "boolean"
                },
                "unitId": {
                    "type": "integer"
                },
                "adapter": {
                    "enumValues": [
                        "modbus"
                    ]
                }
            },
            "required": [
                "isRtu",
                "unitId",
                "adapter"
            ]
        },
        "ChannelOptionBase": {
            "type": "object",
            "properties": {
                "adapter": {
                    "enumValues": [
                        "modbus"
                    ]
                }
            },
            "required": [
                "adapter"
            ],
            "oneOf": [
                {
                    "$ref": "#/definitions/ChannelOptionForModbus"
                }
            ]
        },
        "TransportOptionForTcp": {
            "type": "object",
            "properties": {
                "host": {
                    "type": "string"
                },
                "port": {
                    "type": "integer"
                },
                "adapter": {
                    "enumValues": [
                        "tcp"
                    ]
                }
            },
            "required": [
                "host",
                "port",
                "adapter"
            ]
        },
        "TransportOptionBase": {
            "type": "object",
            "properties": {
                "adapter": {
                    "enumValues": [
                        "tcp"
                    ]
                }
            },
            "required": [
                "adapter"
            ],
            "oneOf": [
                {
                    "$ref": "#/definitions/TransportOptionForTcp"
                }
            ]
        },
        "DeviceOption": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "template": {
                    "type": "string"
                },
                "channelOption": {
                    "$ref": "#/definitions/ChannelOptionBase"
                },
                "transportOption": {
                    "$ref": "#/definitions/TransportOptionBase"
                },
                "displayName": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            },
            "required": [
                "name",
                "template",
                "channelOption",
                "transportOption"
            ]
        }
    }
}
